<?xml version="1.0" encoding="utf-8"?>
<extension type="module" version="2.5.20" client="site" method="install">
    <!-- Name of the Module -->
	<name>AMR Email Sign Up</name> 
 
    <!-- Name of the Author -->
	<author>Froilan MIranda</author> 
 
    <!-- Version Date of the Module -->
	<creationDate>2014-06-16</creationDate> 
 
    <!-- Copyright information -->
	<copyright>All rights reserved 2014.</copyright> 
 
    <!-- License Information -->
	<license>GPL 2.0</license> 
 
    <!-- Author's email address -->
	<authorEmail>fmiranda@amresorts.com</authorEmail> 
 
    <!-- Author's website -->
	<authorUrl></authorUrl> 
 
    <!-- Module version number -->
	<version>1.0.0</version> 
 
    <!-- Description of what the module does -->
	<description>Provides a deals and specials sign up by email</description>
 
    <!-- Listing of all files that should be installed for the module to function -->
	<files>
        <!-- The "module" attribute signifies that this is the main controller file -->
		<filename module="mod_amr_mcc_email">mod_amr_mcc_email.php</filename>
		<filename>index.html</filename>
	</files>
 
    <!-- Optional parameters -->
	<config>
		<fields name ="params">
			<fieldset name="basic">
				<field
					name="lead_source"
					type="text"
					defualt="YourWebsite - Here"
					label="Lead Source"
					description="Source of email form, this will be captured in MCC as Lead Source" />
				<field
					name="anchor_text"
					type="text"
					defualt=""
					label="Anchor Text"
					description="Text to go in link" />
			</fieldset>
		</fields>
	</config>
</extension>